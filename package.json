{
  "name": "mater",
  "version": "2.0.3",
  "description": "A Pomodoro menubar app",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "npm run bundle:dev && electron .",
    "bundle": "node esbuild.config.js",
    "bundle:dev": "node esbuild.config.js --dev",
    "make": "npm run bundle && electron-forge make",
    "make:mac": "npm run bundle && electron-forge make --platform darwin",
    "make:linux": "npm run bundle && electron-forge make --platform linux",
    "make:win": "npm run bundle && electron-forge make --platform win32",
    "lint": "run-s lint:js lint:css",
    "lint:css": "stylelint \"*.css\"",
    "lint:js": "biome check",
    "test": "run-s lint test:e2e",
    "test:e2e": "playwright test",
    "version:get": "node scripts/version.js get",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasonlong/mater.git"
  },
  "keywords": [
    "pomodoro",
    "productivity",
    "timer",
    "electron",
    "menubar"
  ],
  "author": "Jason Long",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jasonlong/mater/issues"
  },
  "homepage": "https://github.com/jasonlong/mater",
  "dependencies": {
    "menubar": "^9.5.2",
    "tiny-timer": "^1.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.1",
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-dmg": "^7.6.0",
    "@electron-forge/maker-squirrel": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@playwright/test": "^1.58.2",
    "electron": "^40.0.0",
    "esbuild": "^0.27.3",
    "npm-run-all": "^4.1.5",
    "stylelint": "^17.3.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-order": "^7.0.1"
  }
}
