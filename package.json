{
  "name": "mater",
  "version": "1.0.9",
  "description": "A Pomodoro menubar app",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "npm run bundle && electron main.js",
    "bundle": "esbuild renderer.src.js --bundle --outfile=renderer.js --platform=browser",
    "package": "npm run bundle && run-s package:mac package:linux package:win",
    "package:mac": "electron-packager . Mater --platform=darwin --arch=x64 --overwrite --icon=mater",
    "package:linux": "electron-packager . Mater --platform=linux --arch=x64 --overwrite --icon=mater",
    "package:win": "electron-packager . Mater --platform=win32 --arch=x64 --overwrite --icon=mater",
    "lint": "run-s lint:js lint:css",
    "lint:css": "stylelint \"*.css\"",
    "lint:js": "xo --ignore renderer.js",
    "test": "run-s lint test:e2e",
    "test:e2e": "playwright test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasonlong/mater.git"
  },
  "keywords": [
    "pomodoro",
    "productivity",
    "timer",
    "electron",
    "menubar"
  ],
  "author": "Jason Long",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jasonlong/mater/issues"
  },
  "homepage": "https://github.com/jasonlong/mater",
  "dependencies": {
    "menubar": "^9.5.2",
    "tiny-timer": "^1.6.0"
  },
  "devDependencies": {
    "@electron/osx-sign": "^1.3.1",
    "@playwright/test": "^1.50.1",
    "electron": "31.1.0",
    "electron-packager": "^17.1.2",
    "esbuild": "^0.24.2",
    "npm-run-all": "^4.1.5",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-order": "^7.0.1",
    "xo": "^1.2.3"
  },
  "xo": {
    "rules": {
      "@stylistic/comma-dangle": 0
    },
    "semicolon": false,
    "space": true
  }
}
