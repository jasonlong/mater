{
  "name": "mater",
  "version": "3.0.0",
  "description": "A Pomodoro menubar app",
  "type": "module",
  "scripts": {
    "dev": "electrobun dev",
    "build": "electrobun build",
    "start": "bun run build && bun run dev",
    "lint": "run-s lint:js lint:css",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:js": "biome check",
    "test": "run-s lint",
    "version:get": "node scripts/version.js get",
    "version:patch": "node scripts/version.js patch",
    "version:minor": "node scripts/version.js minor",
    "version:major": "node scripts/version.js major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasonlong/mater.git"
  },
  "keywords": [
    "pomodoro",
    "productivity",
    "timer",
    "electrobun",
    "menubar"
  ],
  "author": "Jason Long",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jasonlong/mater/issues"
  },
  "homepage": "https://github.com/jasonlong/mater",
  "dependencies": {
    "electrobun": "^1.13.1",
    "tiny-timer": "^1.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.1",
    "@types/bun": "latest",
    "npm-run-all": "^4.1.5",
    "stylelint": "^17.3.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-order": "^7.0.1"
  }
}
